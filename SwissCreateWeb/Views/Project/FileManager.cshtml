    $('.context').contextmenu({
        target: '#context-menu',
        before: function (e, context) {
            // execute code before context menu if shown
            var selectedType = e.target.attributes['data-type'].value;

            if (selectedType == "category") {
                $("#ul_folder").show();
                $("#ul_file").hide();
            }
            else {
                $("#ul_folder").hide()
                $("#ul_file").show();
            }
            return true;
        },
        onItem: function (context, e) {
