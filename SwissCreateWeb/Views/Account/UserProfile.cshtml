@Model SwissCreateWeb.Models.UserProfileViewModel

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("UpdateUserProfile", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
               
               <div class="form-group">
                        @Html.LabelFor(m => m., new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@T("Account.Login.LoginButton")" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink(T("Account.Login.ForgotPassword").Text, "ForgotPassword") @T("Account.Login.ForgotPassword.Text")
                </p>
            }
        </section>
    </div>
    <div class="col-md-4">
        
    </div>
</div>